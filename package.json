{
  "name": "electron-updater-example",
  "version": "0.6.11",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "Scorg Technology",
  "scripts": {
    "publish": "build  --win -p always",
    "linux-publish": "build  --linux -p always"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^20.8.2"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^2.21.4"
  },
  "build": {
    "appId": "com.github.rajkotgire.electronupdaterexample",
    "mac": {
      "category": "Health care tool",
      "target": [
        "dmg"
      ]
    },
    "linux":{
        "target":[
          "snap"
        ]
    },
    "win":{
      "target":[
        
        "nsis"
      ]
  }
  }
}
